<html>
    <head>
        <title>TIP</title>
    </head>
  
    <body>
        <div class="container col-9">
        <!-- index content -->
        <div class="index-content">
            <h3><%=@category.name %> 게시판</h3>
        </div>
        <br>

            <br>
            <div class="index-content">
                <table style="width:100%; border-top: 1px solid #D8D8D8; border-bottom: 1px solid #D8D8D8;">
                    <tr style="border-bottom: 1px solid #D8D8D8;">
                         <th style="width:13%;">
                             category
                         </th>
                         <th style="width:47%;">
                             title
                         </th>
                         <th style="width:10%;">
                             writer
                         </th>
                         <th style="width:20%;">
                             date
                         </th>
                         <th style="width:10%;">
                             like
                         </th>
                    </tr>
            <% if @tipposts.nil? %>
                <tr>
                    <td>게시글이 없습니다!</td>
                </tr>
            <% else %>
                <% @tipposts.each do |p| %>
                    <tr>
                        <td class="no" style="text-align: center; font-size:0.8em;"><%=p.category.name%></td>
                        <td><a href="/tipposts/show/<%=p.id%>"><%= p.title %></a></td>
                        <td style="text-align: center;"><%=p.user.name%></td>
                        <td class="date" style="text-align: center;"><%=p.updated_at%></td>
                        <td class="like-count" style="text-align: center;"><%=p.upcount%></td>
                    </tr>
                <% end %>
            <% end %>
            </table>
            <br>
            <!--글쓰기 버튼-->
            <form action="/tipposts/new" style="float:left;">
                <button type="submit" class="btn btn-secondary btn-sm">write</button>
            </form>

            <!--search-->
    <div class="search">
        <%= form_tag(tipposts_path, :method => "get", id: "search-form") do %>
            <input type="text" class="form-control form-control-sm index-search" name="search" id="search" placeholder="제목 또는 내용 검색">
            <button type="submit" class="btn btn-secondary btn-sm">search</button>
        <% end %>
    </div>
            </div>
        </div>
    </body>
</html>