<html>
    <head>
        <title>TIP</title>
        <!--preview_이미지.js-->
        <script>
              function readURL(input) {
                if (input.files && input.files[0]) {
                  var reader = new FileReader();
        
                  reader.onload = function (e) {
                    $('#img_prev')
                      .attr('src', e.target.result)
                      .width(200)
                      .height(200);
                  };
        
                  reader.readAsDataURL(input.files[0]);
                }
              }
        </script>
    </head>
    <body>
        <div class="container col-9">
            <div class="index-content" >
                <h3 style="text-align:left; color:#5D5D5D;">TIP 게시판 글쓰기</h3>
                <hr>
                <div class="new-content" >
                    <% @tippost = Tippost.new %>
                    <%= form_for (@tippost) , url: {action: "create"}  do |f| %>
                        <div class="form-group">

                            <label for="exampleSelect1" class="input-label">category</label>
                            <select name="tippost[category_id]" id="tippost_category_id exampleSelect1" class="form-control">
                                <option value="1">etc</option>
                                <option value="2">Cafe</option>
                                <option value="3">Convenience</option>
                                <option value="4">Food</option>
                                <option value="5">Movie Theater</option>
                                <option value="6">Education</option>
                            </select>
                        </div>
                        <br>
                        <label for="titlearea" class="input-label">title</label>
                        <input type="text" name="tippost[title]" id="tippost_title"  class="form-control form-control-sm" >
                        <br>
                        <label for="contentarea" class="input-label">content</label>
                        <textarea name="tippost[content]" class="form-control" id="tippost_content contentarea" rows="7"></textarea>
                        <br>
                        <hr>
                        <div style="text-align:center;">
                            <%= f.file_field(:image, :onchange => "readURL(this);") %>
                            <!--<input type="file" name="tippost[image]" id="tippost_image" onchange="readURL(this);">-->
                            <p><img id="img_prev" src="#" alt="your image" /></p>
                        </div>
                    </div>
                    <hr>
                    <input type="submit" class="btn btn-secondary btn-sm"name="commit" value="Create Tippost" style="float:right;">
                    <% end %>
                    <form action="/tipposts/index" method="GET">
                        <button type="submit" class="btn btn-secondary btn-sm" style="float:left;">list</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
