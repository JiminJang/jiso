            <!--팁게시판 좋아요 순위-->
            <div class="cardWrapper">
            <a href='/tipposts/index'>    <h5 id="h5Style">| 팁게시판 실시간 인기글 |</h5> </a>
                <% @tippostslike.each do |t|%>
                <div class="modal-best" data-toggle="modal" data-target="#t<%=t.id%>">
                    <div class="card col-3">
                        <img class="card-img-top" src="<%=t.image.url %>" alt="Card image cap" onerror=this.src="../assets/10.jpg">
                        <div class="card-block">
                                <p class="card-title"><%=t.category.name%> | <%=t.title%></p>
                                <hr>
                                <div class="cardContent">
                                    <img src="<%=t.user.avatar.url%>" class="avatarImg" onerror=this.src="../assets/10.jpg">
                                    <p class="card-text"> <%=t.user.name%><br>LIKE&hearts;<%=t.upcount%></p>
                                </div>  
                        </div>
                    </div>
                </div>
                 <!--팁게시판 알림창-->       
                <div class="modal fade" id="t<%=t.id%>" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <% unless t.image.nil?%>
                                <img src="<%=t.image.url %>" class="modal-image" onerror=this.src="../assets/10.jpg">
                            <%end%>
                            <p style="font-size:0.7em;"> LIKE&hearts;<%=t.upcount%> </p>
                            
                           
                            <div class = "modal-profile">
                                <img src="<%=t.user.avatar.url%>" class="avatarImg" onerror=this.src="../assets/10.jpg">
                                <p><%=t.user.name%></p>
                            </div>
                            <div class="profile-wrapper">
                                
                                <p class ="modal-title"><%=t.category.name%> | <%= t.title%></p>
                                <p class="modal-contentarea"><%= t.content%></p>
                                
                            </div>
                            <br>
                        </div>
                    </div>
                </div>
            
                <% end %>
            </div>
            
